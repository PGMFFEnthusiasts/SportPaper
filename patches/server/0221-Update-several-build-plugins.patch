diff --git a/pom.xml b/pom.xml
index e498dcbd7..0d2f7261e 100644
--- a/pom.xml
+++ b/pom.xml
@@ -168,7 +168,7 @@
             <plugin>
                 <groupId>net.md-5</groupId>
                 <artifactId>scriptus</artifactId>
-                <version>0.4.1</version>
